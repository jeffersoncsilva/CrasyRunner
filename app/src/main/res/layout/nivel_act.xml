<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@drawable/fundo">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:src="@drawable/dificuldade"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btnFacil"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/facil"
            android:textSize="24dp"
            android:textAlignment="center"
            android:onClick="escolheDificuldade"/>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btnMedio"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/medio"
            android:textSize="22dp"
            android:textAlignment="center"
            android:onClick="escolheDificuldade"/>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btnDificio"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/dificio"
            android:textAlignment="center"
            android:textSize="18dp"
            android:onClick="escolheDificuldade"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnVolta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voltar"
        android:onClick="voltaInicio"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>